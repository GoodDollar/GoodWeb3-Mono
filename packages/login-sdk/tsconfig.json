{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["jest", "node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false,
    "baseUrl": "src",
    "noEmit": false,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["src/tests"]
}