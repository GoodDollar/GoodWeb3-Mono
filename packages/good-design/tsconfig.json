{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleSuffixes": ["",".native",".web"],
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types", "src/custom.d.ts"],
    "noEmit": false,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "composite": true,
  },
  "include": ["src/**/*", "src/**/*.json", "src/locales/**/*", "src/locales/index.ts"],
  "exclude": ["node_modules", "../../node_modules", "src/stories", "**/*.stories.tsx", "src/locales/gen_supported_locales.js",],
  "resolveJsonModule": true,
}
