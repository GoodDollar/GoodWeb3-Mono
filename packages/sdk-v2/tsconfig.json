{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019", "dom", "dom.iterable"],
    "module": "ESNext",
    "outDir": "dist/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "declarationDir": "types",
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
    "noEmit": false,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "noImplicitAny": false,
    "composite": true,
    "removeComments": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "../../node_modules",
    "src/stories",
    "**/*.stories.tsx",
    "src/types",
    "**/*.test.*",
    "__tests__"
  ]
}
