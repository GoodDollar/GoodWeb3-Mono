{
  "name": "gooddollar",
  "workspaces": [
    "packages/**"
  ],
  "private": true,
  "version": "0.0.1",
  "description": "GoodDollar Library",
  "author": "LewisB <lewis@gooddollar.org> ",
  "license": "GPL-3.0",
  "homepage": "",
  "scripts": {
    "build": "yarn workspaces foreach -ptRv --from '{@gooddollar/sdk-v2,@gooddollar/**}' run build",
    "compile": "tsc -p tsconfig.build.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "packageManager": "yarn@3.2.1",
  "dependencies": {
    "@types/react-native": "^0.70.4",
    "prettier": "^2.7.1",
    "react-native": "^0.70.2"
  },
  "resolutions": {
    "@react-native-async-storage/async-storage": "1.17.10",
    "web3-core-method@1.7.5": "patch:web3-core-method@npm:1.7.5#.yarn/patches/web3-core-method-npm-1.7.5-919ae06220.patch",
    "ctix@1.4.0": "patch:ctix@npm:1.4.0#.yarn/patches/ctix-npm-1.4.0-031fc5027b.patch"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "pinst": "^3.0.0",
    "typescript": "^4.9.3"
  },
  "lint-staged": {
    "packages/*/src/**/*.[jt]s*": [
      "eslint --fix --max-warnings=0",
      "git add"
    ]
  }
}
